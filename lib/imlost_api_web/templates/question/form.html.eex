<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :content %>
  <%= textarea f, :content %>
  <%= error_tag f, :content %>

  <%= label f, :upvotes %>
  <%= number_input f, :upvotes %>
  <%= error_tag f, :upvotes %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
